# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///data/ecg_llm.db
POSTGRES_URL=postgresql://user:password@localhost:5432/ecg_llm

# Data Paths
RAW_DATA_PATH=data/raw/
PROCESSED_DATA_PATH=data/processed/
ANNOTATIONS_PATH=data/annotations/
KNOWLEDGE_GRAPH_PATH=data/knowledge_graphs/

# Model Configuration
MODEL_CACHE_DIR=./models/
HUGGINGFACE_CACHE_DIR=./huggingface_cache/
TRANSFORMERS_CACHE=./transformers_cache/

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ecg_llm.log

# Experiment Tracking
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=ecg-llm-diagnosis
WANDB_ENTITY=your_wandb_username

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=ecg-llm-experiments

# Vector Database
FAISS_INDEX_PATH=data/faiss_index/
CHROMADB_PATH=data/chromadb/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment

# Compute Resources
CUDA_VISIBLE_DEVICES=0
OMP_NUM_THREADS=8
MKL_NUM_THREADS=8

# Development Settings
DEBUG=False
TEST_MODE=False
VERBOSE=True

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# External Services
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# PhysioNet Credentials (if needed)
PHYSIONET_USERNAME=your_physionet_username
PHYSIONET_PASSWORD=your_physionet_password

# Research Institution Settings
INSTITUTION_NAME=Your Institution Name
RESEARCH_GROUP=Your Research Group
CONTACT_EMAIL=your_contact@institution.edu

# Data Privacy
ANONYMIZE_DATA=True
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE=True

# Performance Tuning
BATCH_SIZE=16
MAX_WORKERS=4
MEMORY_LIMIT=8GB
TIMEOUT_SECONDS=300